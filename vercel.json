function Badge({ status }) {
  const c = STATUS_CONFIG[status] || STATUS_CONFIG.pending;
  return (
    <span style={{
      background: c.color + "22", color: c.color, border: `1px solid ${c.color}44`,
      borderRadius: 20, padding: "3px 10px", fontSize: 12, fontWeight: 700,
      display: "inline-flex", alignItems: "center", gap: 4,
    }}>{c.icon} {c.label}</span>
  );
}

function ProgressBar({ order }) {
  const steps = ["accepted", "preparing", "ready", "picked", "delivered"];
  const idx = steps.indexOf(order.status);
  const pct = order.status === "pending" ? 0 : Math.round(((idx + 1) / steps.length) * 100);
  return (
    <div style={{ margin: "12px 0" }}>
      <div style={{ display: "flex", justifyContent: "space-between", fontSize: 11, color: "#94a3b8", marginBottom: 6 }}>
        <span>Progreso</span><span>{pct}%</span>
      </div>
      <div style={{ height: 8, background: "#1e293b", borderRadius: 4, overflow: "hidden" }}>
        <div style={{ width: `${pct}%`, height: "100%", background: "linear-gradient(90deg,#f97316,#fb923c)", borderRadius: 4, transition: "width 0.6s ease" }} />
      </div>
      <div style={{ display: "flex", justifyContent: "space-between", marginTop: 8 }}>
        {["âœ…","ğŸ‘¨â€ğŸ³","ğŸ“¦","ğŸ›µ","ğŸ‰"].map((icon, i) => (
          <span key={i} style={{ fontSize: 18, opacity: i <= idx ? 1 : 0.25, transition: "opacity 0.4s" }}>{icon}</span>
        ))}
      </div>
    </div>
  );
}

